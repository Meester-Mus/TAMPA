{
  "version": "v1",
  "name": "acceptance_policy",
  "description": "Policy for accepting TAMPA execution results",
  "acceptance_criteria": {
    "consensus_required": true,
    "min_executions": 2,
    "max_execution_time_ms": 300000,
    "deterministic_required": true,
    "signature_required": false
  },
  "validation_rules": {
    "output_format": "json",
    "require_canonical_form": true,
    "max_output_size_mb": 10
  },
  "discrepancy_handling": {
    "action_on_discrepancy": "reject",
    "allow_retry": true,
    "max_retries": 3,
    "notify_on_discrepancy": true
  }
}
